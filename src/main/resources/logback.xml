<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [..%.18thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="au.gov.ga.geodesy" level="WARN"/>
  <logger name="au.gov.ga.geodesy.support.commandline.GeodesyMLCommandLine" level="INFO"/>
  <logger name="org.dozer.MappingProcessor" level="WARN"/>

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
